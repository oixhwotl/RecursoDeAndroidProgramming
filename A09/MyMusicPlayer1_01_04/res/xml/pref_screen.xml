<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/pref_header_player" >
        <ListPreference
            android:defaultValue="@string/pref_skip_second_default_value"
            android:entries="@array/pref_skip_second_titles"
            android:entryValues="@array/pref_skip_second_values"
            android:key="@string/pref_skip_second_key"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_skip_second_title" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_automatic_play_key"
            android:summary="@string/pref_automatic_play_description"
            android:title="@string/pref_automatic_play_title" />
    </PreferenceCategory>

    <PreferenceScreen android:title="@string/pref_header_open_youtube" >
        <intent
            android:action="android.intent.action.VIEW"
            android:data="https://www.youtube.com/playlist?list=PLQCiiajdpppoOVoSi0d7Gtmfoohb_B8n2" />
    </PreferenceScreen>

</PreferenceScreen>